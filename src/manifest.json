{
    "manifest_version": 3,
    "name": "Toonalate",
    "description": "Toonalate",
    "version": "1.0.0",
    "permissions": [
        "tabs",
        "tabCapture",
        "unlimitedStorage",
        "activeTab"
    ],
    "icons": {
        "16": "./assets/icon-16.png",
        "32": "./assets/icon-32.png",
        "48": "./assets/icon-48.png", 
        "128": "./assets/icon-128.png"
    },
    "action": {
        "default_title": "Toonalate",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["contentScript.js"]
        }
    ]
}